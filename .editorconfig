root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.c]
indent_style = tab
indent_size = 4

[*.h]
indent_style = tab
indent_size = 4

[*.s]
indent_size = 4

[makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false


